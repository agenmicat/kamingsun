<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {# ---- absolute urls ---- #}
  {% set siteUrl = (site and site.url) ? site.url : "" %}
  {% set canonical = siteUrl + page.url %}

  {# ---- title & description ---- #}
  <title>{% if title %}{{ title }} · {% endif %}AgenMicat</title>

  {% set metaDesc = description or "Blog video AgenMicat – kumpulan video pilihan, tutorial, dan hiburan." %}
  <meta name="description" content="{{ metaDesc }}">

  <link rel="canonical" href="{{ canonical }}" />
  <link rel="stylesheet" href="/assets/style.css" />

  {# ---- Open Graph ---- #}
  {% set ogTitle = title or "AgenMicat" %}
  {% set ogDesc  = metaDesc %}

  {# og:image priority: thumbnail -> provider-based -> default #}
  {% set ogImage = thumbnail or "" %}

  {% if (not ogImage) and video and video.provider == "youtube" and video.id %}
    {% set ogImage = "https://i.ytimg.com/vi/" + video.id + "/hqdefault.jpg" %}
  {% endif %}

  {% if (not ogImage) and video and video.provider == "cloudflare" and video.id %}
    {% set ogImage = "https://videodelivery.net/" + video.id + "/thumbnails/thumbnail.jpg" %}
  {% endif %}

  {% if not ogImage %}
    {% set ogImage = siteUrl + "/assets/og-default.jpg" %}
  {% endif %}

  {# og:type: homepage website, post/video video.other #}
  {% set ogType = "website" %}
  {% if video %}
    {% set ogType = "video.other" %}
  {% endif %}

  <meta property="og:type" content="{{ ogType }}" />
  <meta property="og:title" content="{{ ogTitle }}" />
  <meta property="og:description" content="{{ ogDesc }}" />
  <meta property="og:url" content="{{ canonical }}" />
  <meta property="og:image" content="{{ ogImage }}" />
</head>

<body>
  <div class="container">
    <div class="header">
      <div class="brand">
        <h1>AgenMicat</h1>
        <small>Koleksi Video Viral</small>
      </div>
    </div>

    {# nav kamu letakkan sejajar container (di luar header) #}
    <div class="nav">
      <a href="/">Home</a>
      <a href="/categories/">Categories</a>
      <a href="/tags/">Tags</a>
      <a href="/search/">Search</a>
    </div>

    <div class="main content">
      {{ content | safe }}
    </div>

    <div class="footer">© 2026</div>
  </div>
</body>
</html>
