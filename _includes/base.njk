<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>
    {% if title %}{{ title }} · {% endif %}AgenMicat
  </title>

  {% if description %}
    <meta name="description" content="{{ description }}">
  {% else %}
    <meta name="description" content="Blog video AgenMicat – kumpulan video pilihan, tutorial, dan hiburan.">
  {% endif %}

  <link rel="canonical" href="{{ page.url | url }}" />

  <link rel="stylesheet" href="/assets/style.css" />
<meta property="og:type" content="video.other" />
<meta property="og:title" content="{{ title or 'AgenMicat' }}" />
<meta property="og:description" content="{{ description or 'Blog video AgenMicat' }}" />
<meta property="og:url" content="{{ page.url | url }}" />

{% if youtube_id %}
  <meta property="og:image" content="https://i.ytimg.com/vi/{{ youtube_id }}/hqdefault.jpg" />
{% else %}
  <meta property="og:image" content="/assets/og-default.jpg" />
{% endif %}

</head>

<body>
  <div class="container">
    <div class="header">
      <div class="brand">
        <h1>AgenMicat</h1>
        <small>Koleksi Video Viral</small>
      </div>
      <div class="nav">
        <a href="/">Home</a>
      </div>
    </div>
  <div class="nav">
    <a href="/">Home</a>
    <a href="/categories/">Categories</a>
    <a href="/tags/">Tags</a>
  </div>
    <div class="main content">
      {{ content | safe }}
    </div>

    <div class="footer">© 2026</div>
  </div>
</body>
</html>
