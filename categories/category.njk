---
layout: base.njk
pagination:
  data: collections.categoryList
  size: 1
  alias: cat
permalink: "/categories/{{ cat | url }}/"
---

# Category: {{ cat }}

<ul class="video-grid">
{% for post in collections.posts %}
  {% if post.data.category == cat %}
    <li class="video-card">
      <a class="thumb" href="{{ post.url }}">
        {% if post.data.youtube_id %}
          <img src="https://i.ytimg.com/vi/{{ post.data.youtube_id }}/hqdefault.jpg" alt="{{ post.data.title }}">
        {% endif %}
        <span class="badge">{{ cat }}</span>
      </a>
      <div class="video-info">
        <h2 class="video-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      </div>
    </li>
  {% endif %}
{% endfor %}
</ul>
